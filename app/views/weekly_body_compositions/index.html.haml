#lean{ style: 'height: 200px' }
#fat{ style: 'height: 300px' }

:javascript
  new Morris.Line({
    // ID of the element in which to draw the chart.
    element: 'fat',
    // Chart data records -- each entry in this array corresponds to a point on
    // the chart.
    data: #{@body_compositions.map { |bc| { taken_at: bc.taken_at.to_date, fat: bc.fat }}.to_json},
    // The name of the data record attribute that contains x-values.
    xkey: 'taken_at',
    // A list of names of data record attributes that contain y-values.
    ykeys: ['fat'],
    // Labels for the ykeys -- will be displayed when you hover over the
    // chart.
    labels: ['Fat'],
    lineWidth: 0,
    pointSize: 2,
    ymax: 20,
    ymin: 10
  });

  new Morris.Line({
    // ID of the element in which to draw the chart.
    element: 'lean',
    // Chart data records -- each entry in this array corresponds to a point on
    // the chart.
    data: #{@body_compositions.map { |bc| { taken_at: bc.taken_at.to_date, lean: bc.lean }}.to_json},
    // The name of the data record attribute that contains x-values.
    xkey: 'taken_at',
    // A list of names of data record attributes that contain y-values.
    ykeys: ['lean'],
    // Labels for the ykeys -- will be displayed when you hover over the
    // chart.
    labels: ['Lean'],
    lineWidth: 0,
    pointSize: 2,
    ymax: 34,
    ymin: 30
  });
